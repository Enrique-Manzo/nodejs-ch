<section class="shop_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Latest Watches
        </h2>
      </div>
        <div class="row">
                {{#each watches}}
                <div class="{{#if this.featured}}col-md-6 {{else}}col-sm-6 col-xl-3{{/if}}">
                <div class="box">
                    <a href="">
                    <div class="img-box">
                        <img src="{{this.image}}" alt="">
                    </div>
                    <div class="detail-box">
                        <h6>
                        {{this.name}}
                        </h6>
                        <h6>
                        Price:
                        <span>
                            ${{this.price}}
                        </span>
                        </h6>
                    </div>
                    <div class="new">
                        <span>
                        {{this.tag}}
                        </span>
                    </div>
                    </a>
                </div>
                </div>
                {{/each}}
            <div class="shop_section btn-box">
                <a href="">
                View All
                </a>
            </div>
            </div>
</section>